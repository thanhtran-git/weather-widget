{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "^/weatherIcons/(.*)",
      "dest": "/weatherIcons/$1"
    },

    {
      "src": "^/miniIcons/(.*)",
      "dest": "/miniIcons/$1"
    },

    {
      "src": "^/(.*)",
      "dest": "/index.html"
    }
  ]
}
